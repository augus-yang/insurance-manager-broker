{% extends 'layouts/detail.njk' %}

{% block breadcrumb %}
<li>
    <span>全民经纪</span>
    <i class="fa fa-circle"></i>
</li>
<li>
    <a href="/appointment/page">预约赴港</a>
    <i class="fa fa-circle"></i>
</li>
<li>
    <span>预约赴港</span>
</li>
{% endblock %}

{% block title %}预约赴港{% endblock %}

{% block note %}查看预约赴港信息{% endblock %}

{% block tab %}
<li class="active">
    <a href="#tab_1" data-toggle="tab">内容</a>
</li>
{% endblock %}

{% block tabContent %}
<div class="tab-pane active" id="tab_1">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet green box">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs"></i>详细内容
                    </div>
                    <div class="actions">
                        {% from "kits/audit.njk" import audit %}
                        {{
                            audit('/appointment/' + bean.id + '/audit', '/appointment/page')
                        }}
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row static-info">
                        <div class="col-md-5 name">航班号</div>
                        <div class="col-md-7 value">{{bean.flightNumber}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">随行人员数</div>
                        <div class="col-md-7 value">{{bean.peoples}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">航班日期</div>
                        <div class="col-md-7 value">{{bean.flightDate}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">是否需要香港开户</div>
                        <div class="col-md-7 value">{{bean.whetherOpenAccount}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">开户类型</div>
                        <div class="col-md-7 value">{{bean.openAccountType}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">开户银行</div>
                        <div class="col-md-7 value">{{bean.openAccountBank}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">机票订单截图</div>
                        <div class="col-md-7 value">
                            {% from 'kits/preview.njk' import preview %}
                            {{
                                preview(bean.flightImg)
                            }}
                            {% if bean.flightImgTwo != '' %}
                            {% from 'kits/preview.njk' import preview %}
                            {{
                                preview(bean.flightImgTwo)
                            }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">审核状态</div>
                        <div class="col-md-7 value">{{bean.status}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}