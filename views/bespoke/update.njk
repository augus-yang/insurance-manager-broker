{% extends 'layouts/form.njk' %}

{% block breadcrumb %}
<li>
    <span>保单无忧</span>
    <i class="fa fa-circle"></i>
</li>
<li>
    <a href="/bespoke/page">预约服务</a>
    <i class="fa fa-circle"></i>
</li>
<li>
    <span>预约服务更新</span>
</li>
{% endblock %}

{% block title %}预约服务更新{% endblock %}

{% block note %}更新预约服务{% endblock %}

{% block group %}
<input type="hidden" name="id" value="{{bean.id}}"/>
<div class="form-group  margin-top-20">
    <label class="control-label col-md-3">预约内容
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <textarea name="content" style="width:100%; height:100px; resize:none;">{{bean.content}}</textarea>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="/js/bespoke/update.js"></script>
{% endblock %}