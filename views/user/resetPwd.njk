{% extends 'layouts/form.njk' %}

{% block breadcrumb %}
<li>
    <span>权限管理</span>
    <i class="fa fa-circle"></i>
</li>
<li>
    <a href="/user/page">用户管理</a>
    <i class="fa fa-circle"></i>
</li>
<li>
    <span>重置密码</span>
</li>
{% endblock %}

{% block title %}重置密码{% endblock %}

{% block note %}密码重置{% endblock %}

{% block group %}
<input type="hidden" name="id" value="{{bean.id}}"/>
<div class="form-group  margin-top-20">
    <label class="control-label col-md-3">原始密码
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="oldPwd" autocomplete="off"/>
        </div>
    </div>
</div>
<div class="form-group  margin-top-20">
    <label class="control-label col-md-3">新密码
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="newPwd" autocomplete="off" id="newPwd"/>
        </div>
    </div>
</div>
<div class="form-group  margin-top-20">
    <label class="control-label col-md-3">确认密码
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="newPwd2" autocomplete="off"/>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="/js/user/resetPwd.js"></script>
{% endblock %}