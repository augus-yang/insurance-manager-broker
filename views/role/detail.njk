{% extends 'layouts/detail.njk' %}

{% block breadcrumb %}
<li>
    <span>权限管理</span>
    <i class="fa fa-circle"></i>
</li>
<li>
    <a href="/role/page">角色管理</a>
    <i class="fa fa-circle"></i>
</li>
<li>
    <span>角色详情</span>
</li>
{% endblock %}

{% block title %}角色详情{% endblock %}

{% block note %}查看角色及该角色拥有的资源信息{% endblock %}

{% block tab %}
<li class="active">
    <a href="#tab_1" data-toggle="tab">角色</a>
</li>
<li>
    <a href="#tab_2" data-toggle="tab">资源
        <span class="badge badge-success" id="resourceLength">{{bean.resources.length}}</span>
    </a>
</li>
{% endblock %}

{% block tabContent %}
<div class="tab-pane active" id="tab_1">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet green box">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs"></i>基本信息
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row static-info">
                        <div class="col-md-5 name">名称</div>
                        <div class="col-md-7 value">{{bean.name}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">描述</div>
                        <div class="col-md-7 value">{{bean.describe}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">创建时间</div>
                        <div class="col-md-7 value">{{bean.createdAt}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">更新时间</div>
                        <div class="col-md-7 value">{{bean.updatedAt}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tab-pane" id="tab_2">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            {% from "kits/dtb.njk" import dtb %}
            {{
                dtb([
                    {value: '名称', name: 'name'},
                    {value: '描述'}
                ], 'green box')
            }}
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="/js/role/detail.js"></script>
{% endblock %}