{% extends 'layouts/layout.njk' %}

{% block style %}
{% block css %}{% endblock %}
{% endblock %}

{% block content %}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/index">主页</a>
            <i class="fa fa-circle"></i>
        </li>
        {% block breadcrumb %}{% endblock %}
    </ul>
</div>

<h3 class="page-title">{% block title %}{% endblock %}</h3>

<div class="row">
    <div class="col-md-12">
        <div class="note note-success">
            <p>{% block note %}{% endblock %}</p>
        </div>
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject font-dark sbold uppercase">详情</span>
                </div>
                <div class="actions">
                    <div class="btn-group">
                        <button class="btn green" onclick="history.go(-1)">
                            <i class="fa fa-reply"></i>返回
                        </button>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="tabbable-line">
                    <ul class="nav nav-tabs nav-tabs-lg">
                        {% block tab %}{% endblock %}
                    </ul>
                    <div class="tab-content">
                        {% block tabContent %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block script %}
<script src="/js/kits/detailKit.js"></script>
{% block js %}{% endblock %}
{% endblock %}