{% extends 'layouts/detail.njk' %}

{% block breadcrumb %}
<li>
    <span>全民经纪</span>
    <i class="fa fa-circle"></i>
</li>
<li>
    <a href="/order/page">最新信息</a>
    <i class="fa fa-circle"></i>
</li>
<li>
    <span>最新信息详情</span>
</li>
{% endblock %}

{% block title %}最新信息详情{% endblock %}

{% block note %}查看最新信息{% endblock %}

{% block tab %}
<li class="active">
    <a href="#tab_1" data-toggle="tab">详细信息</a>
</li>
{% endblock %}

{% block tabContent %}
<input type="hidden" name="newsId" value="{{news.id}}"/>
<div class="tab-pane active" id="tab_1">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet green box">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs"></i>详细信息
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row static-info">
                        <div class="col-md-5 name">标题</div>
                        <div class="col-md-7 value">{{news.total}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">内容</div>
                        <div class="col-md-7 value">{{news.content}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">接收人</div>
                        <div class="col-md-7 value">{{user.name}}</div>
                    </div>
                    <div class="row static-info">
                        <div class="col-md-5 name">状态</div>
                        <div class="col-md-7 value">{{news.status}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="/js/news/detail.js"></script>
{% endblock %}