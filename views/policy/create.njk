{% extends 'layouts/form.njk' %}

{% block breadcrumb %}
<li>
    <span>保单无忧</span>
    <i class="fa fa-circle"></i>
</li>
<li>
    <a href="/policy/page">保单托管</a>
    <i class="fa fa-circle"></i>
</li>
<li>
    <span>保单托管创建</span>
</li>
{% endblock %}

{% block title %}保单托管创建{% endblock %}

{% block note %}创建保单托管{% endblock %}

{% block group %}
<div class="form-group  margin-top-20">
    <label class="control-label col-md-3">保单号
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="policyNumber" autocomplete="off"/>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">投保人
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="applicant" autocomplete="off"/>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">受保人
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="insurant" autocomplete="off"/>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">手机号
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="mobile" autocomplete="off"/>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">保险公司
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="insuranceCompany" autocomplete="off"/>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">产品名称
        <span class="required">*</span>
    </label>
    <div class="col-md-4">
        <div class="input-icon right">
            <i class="fa"></i>
            <input type="text" class="form-control" name="productName" autocomplete="off"/>
        </div>
    </div>
</div>
{% endblock %}

{% block extra %}
<div class="col-md-offset-3 col-md-9">
    {% include 'layouts/upload.njk' %}
</div>
{% endblock %}

{% block js %}
<script src="/js/policy/create.js"></script>
{% endblock %}